{
    "name": "AIFoundry Dev Container",
    "image": "mcr.microsoft.com/devcontainers/base:noble",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12.11"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "zshPlugins": [
                "zsh-users/zsh-autosuggestions",
                "zsh-users/zsh-completions",
                "zsh-users/zsh-syntax-highlighting"
            ],
            "zshTheme": "agnoster"
        },
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "version": "2.75.0"
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "1.3.4"
        },
        "ghcr.io/va-h/devcontainers-features/uv:1": {}
    },
    "mounts": [
        "target=${containerWorkspaceFolder}/.venv,type=volume"
    ],
    "remoteEnv": {
        "PATH": "${containerWorkspaceFolder}/.venv/bin:${containerEnv:PATH}"
    },
    "postCreateCommand": {
        "setupEnvironment": "sudo chown -R $(whoami): ${containerWorkspaceFolder}/.venv && uv venv ${containerWorkspaceFolder}/.venv && uv sync"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python"
            }
        }
    }
}
