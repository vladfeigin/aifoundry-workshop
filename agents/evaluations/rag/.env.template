# Environment Configuration Template for RAG Agent Evaluation

# Copy this file to .env and fill in your Azure credentials
# DO NOT commit the .env file to version control

# Azure Subscription and Resource Group
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=your-resource-group-name
AZURE_PROJECT_NAME=your-ai-foundry-project-name
AZURE_PROJECT_ENDPOINT=https://your-project.cognitiveservices.azure.com

# Azure AI Search
AZURE_SEARCH_SERVICE_NAME=your-search-service-name
AZURE_SEARCH_INDEX_NAME=your-search-index-name
AZURE_SEARCH_API_KEY=your-search-api-key-optional

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com
AZURE_OPENAI_API_KEY=your-openai-api-key-optional

# Optional: Azure Application Insights (for advanced tracing)
AZURE_APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Evaluation Configuration (optional)
EVALUATION_MODEL=gpt-4
EVALUATION_API_VERSION=2024-12-01-preview
EVALUATION_BATCH_SIZE=5
EVALUATION_MAX_RETRIES=3
